<!DOCTYPE html>
<html>
<head>
  <title>账单分类统计</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body { padding-top: 20px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>账单分类统计</h1>
    <a href="/" class="btn btn-secondary">返回首页</a>
    <div class="mt-2">
      <form action="/statistics" method="GET">
        <div class="form-row align-items-center">
          <div class="col-auto">
            <label for="startDate">开始日期:</label>
            <input type="date" class="form-control" id="startDate" name="startDate">
          </div>
          <div class="col-auto">
            <label for="endDate">结束日期:</label>
            <input type="date" class="form-control" id="endDate" name="endDate">
          </div>
          <div class="col-auto">
            <label for="categoryType">类别:</label>
            <select name="categoryType" class="form-control">
              <option value="">所有类别</option>
              <option value="category">大类</option>
              <option value="subcategory">小类</option>
            </select>
          </div>
          <div class="col-auto">
            <label for="minAmount">金额大于:</label>
            <input type="number" class="form-control" id="minAmount" name="minAmount">
          </div>
          <div class="col-auto">
            <label for="maxAmount">金额小于:</label>
            <input type="number" class="form-control" id="maxAmount" name="maxAmount">
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary">统计</button>
          </div>
        </div>
      </form>
    </div>
    <hr>
    <h2>统计结果</h2>
    <table class="table">
      <thead>
        <tr>
          <th>类别</th>
          <th>总金额</th>
        </tr>
      </thead>
      <tbody>
        <% if (statistics && statistics.length > 0) { %>
          <% statistics.forEach(item => { %>
            <tr>
              <td><%= item._id %></td>
              <td><%= item.totalAmount %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="2">没有符合条件的统计数据。</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>