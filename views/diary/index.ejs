<% if (success_msg) { %>
    <div class="alert alert-success mt-3" role="alert"><%= success_msg %></div>
<% } %>
<% if (error_msg) { %>
    <div class="alert alert-danger mt-3" role="alert"><%= error_msg %></div>
<% } %>

<h1 class="mb-4">日记列表</h1>

<div class="action-buttons mb-4 d-flex flex-wrap gap-2">
    <a href="/diary/add" class="btn btn-primary"><i class="fas fa-plus me-2"></i>添加日记</a>
    <a href="/diary/statistics" class="btn btn-info"><i class="fas fa-chart-pie me-2"></i>日记统计</a>
    <a href="/diary/export" class="btn btn-success"><i class="fas fa-file-excel me-2"></i>导出日记</a>
    <a href="/" class="btn btn-secondary"><i class="fas fa-home me-2"></i>返回首页</a>
</div>

<hr class="my-4">
<h2 class="mb-3">日记记录</h2>

<div class="table-responsive bg-white p-3 rounded shadow-sm">
    <table class="table table-striped table-hover mb-0">
        <thead>
            <tr>
                <th>日期</th>
                <th>标题</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        <% if (diaries && diaries.length > 0) { %>
            <% diaries.forEach(diary => { %>
                <tr>
                    <td><%= new Date(diary.date).toLocaleDateString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                    <td><%= diary.title %></td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="/diary/view/<%= diary._id %>" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> 查看</a>
                            <a href="/diary/edit/<%= diary._id %>" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> 编辑</a>
                            <form action="/diary/delete/<%= diary._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('确定要删除吗？')"><i class="fas fa-trash-alt"></i> 删除</button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3" class="text-center text-muted py-4">暂无日记记录。</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-between align-items-center mt-3 flex-wrap">
    <div class="d-flex align-items-center mb-2 mb-md-0">
        <label for="limitSelect" class="form-label me-2 mb-0">每页显示:</label>
        <select class="form-select form-select-sm" id="limitSelect" onchange="window.location.href = '/diary?page=1&limit=' + this.value;">
            <option value="5" <%= limit === 5 ? 'selected' : '' %>>5</option>
            <option value="10" <%= limit === 10 ? 'selected' : '' %>>10</option>
            <option value="20" <%= limit === 20 ? 'selected' : '' %>>20</option>
            <option value="50" <%= limit === 50 ? 'selected' : '' %>>50</option>
        </select>
    </div>

    <% if (totalPages >= 1) { %>  <nav aria-label="Page navigation" class="ms-md-auto">
        <ul class="pagination justify-content-end mb-0">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="/diary?page=<%= currentPage - 1 %>&limit=<%= limit %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="/diary?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                </li>
            <% } %>
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="/diary?page=<%= currentPage + 1 %>&limit=<%= limit %>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    <% } %>
</div>