<!DOCTYPE html>
<html>
<head>
    <title>日记列表</title>
    <!--link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"-->
    <link rel="stylesheet" href="/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
        }
        .nav-item {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>日记列表</h1>
    <a href="/diary/add" class="btn btn-primary">添加日记</a>
    <a href="/diary/statistics" class="btn btn-info">日记统计</a>    
    <a href="/" class="btn btn-secondary">返回首页</a>
    <hr>
    <h2>日记记录</h2>
    <table class="table">
        <thead>
        <tr>
            <th>日期</th>
            <th>标题</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% if (diaries && diaries.length > 0) { %>
            <% diaries.forEach(diary => { %>
                <tr>
                    <td><%= new Date(diary.date).toLocaleDateString() %></td>
                    <td><%= diary.title %></td>
                    <td>
                        <a href="/diary/view/<%= diary._id %>" class="btn btn-sm btn-info">查看</a>                       
                        <a href="/diary/edit/<%= diary._id %>" class="btn btn-sm btn-warning">编辑</a>
                        <form action="/diary/delete/<%= diary._id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('确定要删除吗？')">删除</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3">暂无日记记录。</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
</body>
</html>