<div class="container mt-4 mb-4">
    <% if (success_msg) { %>
        <div class="alert alert-success" role="alert"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
    <% } %>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
            <h5 class="mb-0 text-dark"><i class="fas fa-filter mr-2 text-primary"></i>筛选条件</h5>
        </div>
        <div class="card-body pt-3 pb-4">
            <form action="/diary" method="GET">
                <div class="form-row align-items-end">
                    <div class="form-group col-12 col-md-4"> <%# Adjusted column width for date pickers %>
                        <label for="startDate" class="form-label">开始日期</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="<%= typeof query !== 'undefined' && query.startDate ? query.startDate : '' %>">
                    </div>
                    <div class="form-group col-12 col-md-4"> <%# Adjusted column width for date pickers %>
                        <label for="endDate" class="form-label">结束日期</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="<%= typeof query !== 'undefined' && query.endDate ? query.endDate : '' %>">
                    </div>
                    <div class="form-group col-12 col-md-auto mt-3 mt-md-0">
                        <input type="hidden" name="page" value="1"> <%# Reset to page 1 on filter %>
                        <button type="submit" class="btn btn-dark w-100 btn-lg"><i class="fas fa-search mr-2"></i>筛选</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex flex-wrap mb-4 justify-content-center justify-content-md-start">
        <a href="/diary/add" class="btn btn-success btn-lg mb-3 mr-md-3 w-100 w-md-auto">
            <i class="fas fa-plus mr-2"></i>添加日记
        </a>
        <a href="/diary/export<%= queryString ? '?' + queryString : '' %>" class="btn btn-secondary btn-lg mb-3 mr-md-3 w-100 w-md-auto">
            <i class="fas fa-file-export mr-2"></i>导出Excel
        </a>
        <a href="/diary/statistics" class="btn btn-info btn-lg mb-3 w-100 w-md-auto">
            <i class="fas fa-chart-bar mr-2"></i>日记统计
        </a>
        <%# 返回首页按钮将移到最底部 %>
    </div>

    <hr class="mb-5">

    <h2 class="mb-4 text-center text-md-left">日记记录</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">日期</th>
                    <th scope="col">标题</th>
                    <th scope="col" class="text-center">操作</th>
                </tr>
            </thead>
            <tbody>
            <% if (diaries && diaries.length > 0) { %>
                <% diaries.forEach(diary => { %>
                    <tr>
                        <td><%= new Date(diary.date).toLocaleDateString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                        <td><%= diary.title %></td>
                        <td class="text-center">
                            <div class="d-flex flex-nowrap justify-content-center">
                                <a href="/diary/view/<%= diary._id %>" class="btn btn-info btn-sm mr-2" title="查看">
                                    <i class="fas fa-eye"></i><span class="d-none d-lg-inline ml-1">查看</span>
                                </a>
                                <a href="/diary/edit/<%= diary._id %>" class="btn btn-warning btn-sm mr-2" title="编辑">
                                    <i class="fas fa-edit"></i><span class="d-none d-lg-inline ml-1">编辑</span>
                                </a>
                                <form action="/diary/delete/<%= diary._id %>" method="POST" style="display: inline;" onsubmit="return confirm('确定要删除这条日记记录吗？');">
                                    <button type="submit" class="btn btn-danger btn-sm" title="删除">
                                        <i class="fas fa-trash-alt"></i><span class="d-none d-lg-inline ml-1">删除</span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="3" class="text-center alert alert-info">暂无日记记录。</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>

    <% if (totalPages > 0) { %> <%# 只有当有分页时才显示分页部分 %>
        <div class="d-flex justify-content-between align-items-center mt-4 mb-4 flex-column flex-md-row">
            <%# 每页显示条目数下拉框 %>
            <div class="form-group d-flex align-items-center mb-3 mb-md-0">
                <label for="limitBottom" class="form-label mb-0 mr-2 text-nowrap">每页显示:</label>
                <select class="form-control form-control-sm w-auto" id="limitBottom" name="limit">
                    <option value="5" <%= limit == 5 ? 'selected' : '' %>>5</option>
                    <option value="10" <%= limit == 10 ? 'selected' : '' %>>10</option>
                    <option value="20" <%= limit == 20 ? 'selected' : '' %>>20</option>
                    <option value="50" <%= limit == 50 ? 'selected' : '' %>>50</option>
                </select>
            </div>

            <nav aria-label="Page navigation" class="mb-0">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/diary?page=<%= currentPage - 1 %>&limit=<%= limit %><%= queryString ? '&' + queryString : '' %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="/diary?page=<%= i %>&limit=<%= limit %><%= queryString ? '&' + queryString : '' %>"><%= i %></a>
                        </li>
                    <% } %>
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/diary?page=<%= currentPage + 1 %>&limit=<%= limit %><%= queryString ? '&' + queryString : '' %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <span class="ms-md-3 mt-3 mt-md-0 text-nowrap text-muted">总共 <%= totalDiaries %> 条记录</span> <%# Changed to totalDiaries %>
        </div>
    <% } %>

    <div class="d-flex justify-content-start mt-4">
        <a href="/" class="btn btn-secondary btn-lg"><i class="fas fa-home mr-2"></i>返回首页</a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // 更新 limitSelect 的事件监听器以处理 queryString
        const limitBottomSelect = document.getElementById('limitBottom');
        if (limitBottomSelect) {
            limitBottomSelect.addEventListener('change', function() {
                const currentUrl = new URL(window.location.href);
                currentUrl.searchParams.set('limit', this.value);
                currentUrl.searchParams.set('page', 1); // Reset to first page when limit changes

                // 移除原有的 query 参数，因为它会被新的 queryString 覆盖
                ['startDate', 'endDate'].forEach(param => {
                    if (currentUrl.searchParams.has(param)) {
                        currentUrl.searchParams.delete(param);
                    }
                });

                // 将 form 的查询参数添加到 URL
                const filterForm = document.querySelector('#filterForm'); // 假设你给筛选表单添加一个 ID
                if (filterForm) {
                    new FormData(filterForm).forEach((value, key) => {
                        if (value && key !== 'page') { // 排除 page，因为我们已经重置为1
                            currentUrl.searchParams.set(key, value);
                        }
                    });
                }
                window.location.href = currentUrl.toString();
            });
        }

        // 为筛选表单添加 ID，以便在 JS 中获取其参数
        const filterForm = document.querySelector('form[action="/diary"]');
        if (filterForm && !filterForm.id) {
            filterForm.id = 'filterForm';
        }
    });
</script>