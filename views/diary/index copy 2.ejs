<% if (success_msg) { %>
    <div class="alert alert-success mt-3" role="alert"><%= success_msg %></div>
<% } %>
<% if (error_msg) { %>
    <div class="alert alert-danger mt-3" role="alert"><%= error_msg %></div>
<% } %>

<h1 class="mb-4">日记列表</h1>

<div class="action-buttons mb-4 d-flex flex-wrap gap-2"> <%# Using d-flex, flex-wrap, gap-2 for modern Bootstrap styling %>
    <a href="/diary/add" class="btn btn-primary"><i class="fas fa-plus me-2"></i>添加日记</a>
    <a href="/diary/statistics" class="btn btn-info"><i class="fas fa-chart-pie me-2"></i>日记统计</a>
    <a href="/diary/export" class="btn btn-success"><i class="fas fa-file-excel me-2"></i>导出日记</a>
    <a href="/" class="btn btn-secondary"><i class="fas fa-home me-2"></i>返回首页</a>
</div>

<hr class="my-4"> <%# Added margin for hr %>
<h2 class="mb-3">日记记录</h2> <%# Added margin for h2 %>

<div class="table-responsive bg-white p-3 rounded shadow-sm"> <%# Added styling for the table container %>
    <table class="table table-striped table-hover mb-0"> <%# Removed mb-0 from table if it's the last element, otherwise keep it %>
        <thead>
            <tr>
                <th>日期</th>
                <th>标题</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        <% if (diaries && diaries.length > 0) { %>
            <% diaries.forEach(diary => { %>
                <tr>
                    <td><%= new Date(diary.date).toLocaleDateString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td> <%# Formatted date for consistency %>
                    <td><%= diary.title %></td>
                    <td>
                        <div class="d-flex gap-2"> <%# Use d-flex and gap-2 for button spacing %>
                            <a href="/diary/view/<%= diary._id %>" class="btn btn-sm btn-info"><i class="fas fa-eye"></i> 查看</a>
                            <a href="/diary/edit/<%= diary._id %>" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> 编辑</a>
                            <form action="/diary/delete/<%= diary._id %>" method="POST" class="d-inline"> <%# Use d-inline for form %>
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('确定要删除吗？')"><i class="fas fa-trash-alt"></i> 删除</button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3" class="text-center text-muted py-4">暂无日记记录。</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<% if (totalPages > 1) { %>
<nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-center">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="/diary?page=<%= currentPage - 1 %>&limit=<%= limit %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/diary?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
            </li>
        <% } %>
        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="/diary?page=<%= currentPage + 1 %>&limit=<%= limit %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
<% } %>