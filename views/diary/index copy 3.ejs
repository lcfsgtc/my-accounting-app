<div class="container mt-4 mb-4">
    <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success mt-3" role="alert"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger mt-3" role="alert"><%= error_msg %></div>
    <% } %>

    <div class="card shadow-sm mb-5">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
            <h5 class="mb-0 text-dark"><i class="fas fa-filter me-2 text-primary"></i>筛选条件</h5>
        </div>
        <div class="card-body pt-3 pb-4">
            <form action="/diary" method="GET" id="filterForm">
                <div class="form-row align-items-end">
                    <div class="form-group col-12 col-md-4">
                        <label for="startDate" class="form-label">开始日期</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="<%= typeof startDate !== 'undefined' ? startDate : '' %>">
                    </div>
                    <div class="form-group col-12 col-md-4">
                        <label for="endDate" class="form-label">结束日期</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="<%= typeof endDate !== 'undefined' ? endDate : '' %>">
                    </div>
                    <div class="form-group col-12 col-md-4">
                        <label for="searchQuery" class="form-label">关键词</label>
                        <input type="search" class="form-control" id="searchQuery" placeholder="搜索计划、事件、总结或标题" name="searchQuery" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    </div>
                    <div class="form-group col-12 col-md-auto mt-3 mt-md-0">
                        <button type="submit" class="btn btn-dark w-100 btn-lg"><i class="fas fa-search me-2"></i>筛选</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex flex-wrap mb-4 justify-content-center justify-content-md-start gap-2">
        <a href="/diary/add" class="btn btn-success btn-lg mb-3 mb-md-0 w-100 w-md-auto">
            <i class="fas fa-plus me-2"></i>添加日记
        </a>
        <a href="/diary/export<%= queryString ? '?' + queryString : '' %>" class="btn btn-secondary btn-lg mb-3 mb-md-0 w-100 w-md-auto">
            <i class="fas fa-file-excel me-2"></i>导出Excel
        </a>
        <a href="/diary/statistics" class="btn btn-info btn-lg mb-3 mb-md-0 w-100 w-md-auto">
            <i class="fas fa-chart-bar me-2"></i>日记统计
        </a>
        <a href="/" class="btn btn-primary btn-lg mb-3 mb-md-0 w-100 w-md-auto">
            <i class="fas fa-home me-2"></i>返回首页
        </a>
    </div>

    <hr class="mb-5">

    <h2 class="mb-4 text-center text-md-left">日记记录</h2>

    <% if (diaries && diaries.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">日期</th>
                        <th scope="col">标题</th>
                        <th scope="col" class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% diaries.forEach(diary => { %>
                        <tr>
                            <td><%= new Date(diary.date).toLocaleDateString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                            <td><%= diary.title %></td>
                            <td class="text-center">
                                <div class="d-flex flex-nowrap justify-content-center gap-2">
                                    <a href="/diary/view/<%= diary._id %>" class="btn btn-info btn-sm" title="查看">
                                        <i class="fas fa-eye"></i><span class="d-none d-lg-inline ms-1">查看</span>
                                    </a>
                                    <a href="/diary/edit/<%= diary._id %>" class="btn btn-warning btn-sm" title="编辑">
                                        <i class="fas fa-edit"></i><span class="d-none d-lg-inline ms-1">编辑</span>
                                    </a>
                                    <form action="/diary/delete/<%= diary._id %>" method="POST" style="display: inline;" onsubmit="return confirm('确定要删除这条日记记录吗？');">
                                        <button type="submit" class="btn btn-danger btn-sm" title="删除">
                                            <i class="fas fa-trash-alt"></i><span class="d-none d-lg-inline ms-1">删除</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4 mb-4 flex-column flex-md-row">
            <%# 每页显示条目数下拉框 %>
            <div class="form-group d-flex align-items-center mb-3 mb-md-0">
                <label for="limitSelect" class="form-label mb-0 me-2 text-nowrap">每页显示:</label>
                <select class="form-control form-control-sm w-auto" id="limitSelect" name="limitSelect">
                    <% 
                        // 构建带所有搜索参数的基础URL用于更改limit
                        const baseLimitChangeUrl = `/diary?page=1` +
                                                `&searchQuery=${encodeURIComponent(searchQuery || '')}` +
                                                `&startDate=${encodeURIComponent(startDate || '')}` +
                                                `&endDate=${encodeURIComponent(endDate || '')}`;
                    %>
                    <option value="<%= baseLimitChangeUrl %>&limit=5" <%= limit == 5 ? 'selected' : '' %>>5</option>
                    <option value="<%= baseLimitChangeUrl %>&limit=10" <%= limit == 10 ? 'selected' : '' %>>10</option>
                    <option value="<%= baseLimitChangeUrl %>&limit=20" <%= limit == 20 ? 'selected' : '' %>>20</option>
                    <option value="<%= baseLimitChangeUrl %>&limit=50" <%= limit == 50 ? 'selected' : '' %>>50</option>
                </select>
            </div>

            <nav aria-label="Page navigation" class="mb-0">
                <ul class="pagination justify-content-center mb-0">
                    <% 
                        // 构建带所有搜索参数的基础URL用于分页
                        const baseUrl = `/diary?limit=${limit}` +
                                        `&searchQuery=${encodeURIComponent(searchQuery || '')}` +
                                        `&startDate=${encodeURIComponent(startDate || '')}` +
                                        `&endDate=${encodeURIComponent(endDate || '')}`;
                    %>
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="<%= baseUrl %>&page=<%= currentPage - 1 %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">上一页</span>
                        </a>
                    </li>
                    <% 
                    // 智能页码显示逻辑
                    const maxPagesToShow = 5; 
                    let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
                    let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);

                    if (endPage - startPage + 1 < maxPagesToShow && totalPages > maxPagesToShow) {
                        startPage = Math.max(1, endPage - maxPagesToShow + 1);
                    }

                    if (startPage > 1) { %>
                        <li class="page-item"><a class="page-link" href="<%= baseUrl %>&page=1">1</a></li>
                        <% if (startPage > 2) { %>
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        <% } %>
                    <% } %>

                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="<%= baseUrl %>&page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (endPage < totalPages) { %>
                        <% if (endPage < totalPages - 1) { %>
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        <% } %>
                        <li class="page-item"><a class="page-link" href="<%= baseUrl %>&page=<%= totalPages %>"><%= totalPages %></a></li>
                    <% } %>

                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="<%= baseUrl %>&page=<%= currentPage + 1 %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">下一页</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    <% } else { %>
        <p class="alert alert-info text-center mt-5">暂无日记记录。</p>
    <% } %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const limitSelect = document.getElementById('limitSelect');
        limitSelect.addEventListener('change', function() {
            window.location.href = this.value; // 直接跳转到预构建的URL
        });
    });
</script>