<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 form-column">
            <div class="card shadow-sm"> <%# Added shadow-sm for consistency %>
                <div class="card-header bg-primary text-white text-center py-3"> <%# Applied layout's btn-primary style for header %>
                    <h4 class="mb-0">编辑收入记录</h4> <%# Changed to h4 for better hierarchy with page-title %>
                </div>
                <div class="card-body p-4"> <%# Added padding for card body %>
                    <% if (messages && messages.success) { %>
                        <div class="alert alert-success" role="alert"><%= messages.success %></div>
                    <% } %>
                    <% if (messages && messages.error) { %>
                        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
                    <% } %>
                    <form action="/incomes/edit/<%= income._id %>" method="POST">
                        <div class="form-group">
                            <label for="description" class="form-label">描述:</label>
                            <input type="text" class="form-control" id="description" name="description" value="<%= income.description %>" required>
                        </div>
                        <div class="form-group">
                            <label for="amount" class="form-label">金额:</label>
                            <input type="number" class="form-control" id="amount" name="amount" value="<%= income.amount %>" step="0.01" min="0.01" required>
                        </div>
                        <div class="form-group">
                            <label for="category" class="form-label">大类:</label>
                            <input type="text" class="form-control" id="category" name="category" value="<%= income.category %>" required>
                        </div>
                        <div class="form-group">
                            <label for="subcategory" class="form-label">小类:</label>
                            <input type="text" class="form-control" id="subcategory" name="subcategory" value="<%= income.subcategory %>" required>
                        </div>
                        <div class="form-group">
                            <label for="date" class="form-label">日期:</label>
                            <input type="date" class="form-control" id="date" name="date" value="<%= new Date(income.date).toISOString().slice(0, 10) %>" required>
                        </div>
                        
                        <div class="d-flex justify-content-center mt-4"> <%# Using flex utilities for button spacing and alignment %>
                            <button type="submit" class="btn btn-success mr-2"><i class="fas fa-save mr-2"></i>保存</button> <%# Used layout's btn-success %>
                            <a href="/incomes" class="btn btn-secondary"><i class="fas fa-times-circle mr-2"></i>取消</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>