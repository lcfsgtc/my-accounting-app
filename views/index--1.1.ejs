<!DOCTYPE html>
<html>
<head>
  <title>记账应用</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body { padding-top: 20px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>记账应用</h1>
    <a href="/add" class="btn btn-primary">添加交易记录</a>
    <a href="/statistics" class="btn btn-info">查看统计</a>
    <hr>
    <h2>交易记录</h2>
    <table class="table">
      <thead>
        <tr>
          <th>描述</th>
          <th>金额</th>
          <th>类别</th>
          <th>日期</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(transaction => { %>
          <tr>
            <td><%= transaction.description %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.category %></td>
            <td><%= transaction.date.toLocaleDateString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>