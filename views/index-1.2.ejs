<!DOCTYPE html>
<html>
<head>
    <title>记账应用</title>
    <!--link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"-->
    <link rel="stylesheet" href="/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>记账应用</h1>
    <a href="/add" class="btn btn-primary">添加交易记录</a>
    <a href="/statistics" class="btn btn-info">查看统计</a>
    <hr>
    <h2>交易记录</h2>
    <table class="table">
        <thead>
        <tr>
            <th>描述</th>
            <th>金额</th>
            <th>类别</th>
            <th>日期</th>
            <th>操作</th>  <!-- 添加操作列 -->
        </tr>
        </thead>
        <tbody>
        <% transactions.forEach(transaction => { %>
            <tr>
                <td><%= transaction.description %></td>
                <td><%= transaction.amount %></td>
                <td><%= transaction.category %></td>
                <td><%= transaction.date.toLocaleDateString() %></td>
                <td>
                    <a href="/edit/<%= transaction._id %>" class="btn btn-sm btn-warning">编辑</a>  <!-- 编辑按钮 -->
                    <form action="/delete/<%= transaction._id %>" method="POST" style="display: inline;">  <!-- 删除表单 -->
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('确定要删除吗？')">删除</button>
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
</body>
</html>